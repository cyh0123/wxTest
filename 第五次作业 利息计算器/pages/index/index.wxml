<!--pages/lxjsq/lxjsq.wxml-->
<text class="h1">利息计算器</text>
<view class="tr">
<text class="itemx">本金:</text>
<input class="valuex" type="digit" value="{{bj}}" bindinput='bjInput' placeholder="在这里输入本金" />元
</view>  
<!-- digit 当点击输入框 输入法只有数字   bindinput当有输入是发生一个事件在js里产生一个函数 -->
<view class="tr">
<text  class="itemx">利息:</text>
<input class="valuex" type="digit" value="{{lx}}" bindinput='lxInput' placeholder="在这里输入利息" />%/月
</view>
<view class="tr">
<text  class="itemx">借期:</text>
<input class="valuex" type="digit" value="{{sl}}" bindinput='slInput' placeholder="在这里输入月数" />月
</view>
<view class="tr">
<button  class="itemx" size="mini" bindtap='jslx'>计算</button>
<text>应还本息：{{inputValue}}</text>
</view>
<view><text>按月归还列表（显示6个月内）</text></view>
<view wx:if="{{sl>=1}}">第1月:{{inputValue1}}</view>
<view wx:if="{{sl>=2}}">第2月:{{inputValue2}}</view> 
<view wx:if="{{sl>=3}}">第3月:{{inputValue3}}</view>      
<view wx:if="{{sl>=4}}">第4月:{{inputValue4}}</view>     
<view wx:if="{{sl>=5}}">第5月:{{inputValue5}}</view>    
<view wx:if="{{sl>=6}}">第6月:{{inputValue6}}</view>  
<view wx:if="{{sl>6}}">......</view>  
<TabBar />